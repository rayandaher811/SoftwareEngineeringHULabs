<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="40" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.sertia.client.views.unauthorized.purchase.PaymentMethodSelectionPresenter">
    <BorderPane prefHeight="368.0" prefWidth="618.0">
        <top>
            <Label alignment="CENTER" text="בחירת אמצעי תשלום" BorderPane.alignment="CENTER">
                <font>
                    <Font size="26.0"/>
                </font>
            </Label>
        </top>
        <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="5">
                <Button onAction="#toCreditCard" text="תשלום בעזרת כרטיס אשראי" minWidth="180.0" maxWidth="180.0"/>
                <Button onAction="#toPrepaidTickets" text="תשלום באמצעות כרטיסיה" minWidth="180.0" maxWidth="180.0"/>
            </VBox>
        </center>
        <bottom>
            <VBox alignment="CENTER" spacing="7" BorderPane.alignment="CENTER">
                <Button alignment="CENTER" maxHeight="26.0" maxWidth="180.0" minHeight="26.0" minWidth="180.0"
                        onAction="#back" text="חזור"/>
            </VBox>
        </bottom>
    </BorderPane>
</VBox>


