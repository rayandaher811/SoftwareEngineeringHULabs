<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="1000.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.sertia.client.views.authorized.media.manager.AddOrRemoveMoviePresenter">
    <BorderPane prefHeight="368.0" prefWidth="618.0">
        <top>
            <Label text="הוספה / הסרה של סרט" alignment="TOP_CENTER" prefHeight="38.0" prefWidth="718.0"
                   BorderPane.alignment="CENTER">
                <font>
                    <Font size="26.0"/>
                </font>
            </Label>
        </top>
        <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="7" fx:id="buttonsVbox" prefHeight="200.0"
                  prefWidth="100.0">
                <Button onAction="#addNewMovie" text="הוספת סרט חדש" alignment="CENTER" minWidth="180.0" maxWidth="180.0"/>
                <Button onAction="#removeMovie" text="הסרת סרט קיים" alignment="CENTER" minWidth="180.0" maxWidth="180.0"/>
            </VBox>
        </center>
        <bottom>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="7">
                <Button fx:id="logOutBtn" alignment="CENTER" onAction="#back" text="חזרה" minHeight="26.0"
                        maxHeight="26.0" minWidth="180.0" maxWidth="180.0"/>
            </VBox>
        </bottom>
    </BorderPane>
</VBox>