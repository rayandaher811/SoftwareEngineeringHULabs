<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="40" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.sertia.client.views.unauthorized.purchase.PaymentMethodSelectionPresenter">
    <Label alignment="TOP_CENTER" text="ברוך הבא למערכת הסרטייה">
        <font>
            <Font size="26.0"/>
        </font>
    </Label>
    <Group>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="10">
            <Button onAction="#toCreditCard" text="תשלום בעזרת כרטיס אשראי" minWidth="180.0" maxWidth="180.0"/>
            <Button onAction="#toPrepaidTickets" text="תשלום באמצעות כרטיסיה" minWidth="180.0" maxWidth="180.0"/>
        </VBox>
    </Group>
</VBox>
