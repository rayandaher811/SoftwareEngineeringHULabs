<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sertia.client.views.unauthorized.didntuse.PrepaidTicketsPurchaseView">
    <children>
        <BorderPane prefHeight="368.0" prefWidth="618.0">
            <top>
                <Label alignment="TOP_CENTER" prefHeight="38.0" prefWidth="331.0" text="רכישת כרטיסייה"
                       BorderPane.alignment="CENTER">
                    <font>
                        <Font size="26.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <VBox alignment="CENTER">
                    <children>
                        <Label>שם הלקוח</Label>
                    </children>
                    <children>
                        <TextField fx:id="nameTxtField" maxWidth="500" maxHeight="300" alignment="CENTER"></TextField>
                    </children>
                    <children>
                        <Label>טלפון</Label>
                    </children>
                    <children>
                        <TextField fx:id="phoneTxTextField" maxWidth="500" maxHeight="300" alignment="CENTER"></TextField>
                    </children>
                    <children>
                        <Label>דוא"ל</Label>
                    </children>
                    <children>
                        <TextField fx:id="emailTxTextField" maxWidth="500" maxHeight="300" alignment="CENTER"></TextField>
                    </children>
                    <children>
                        <Label>אופן תשלום</Label>
                    </children>
                    <children>
                        <TextField fx:id="complaintData" maxWidth="500" maxHeight="300" alignment="CENTER"></TextField>
                    </children>
                    <children>
                        <Button onMouseClicked="#buy" maxWidth="200">רכישת כרטיסייה</Button>
                    </children>
                    <children>
                        <Button fx:id="backBtn" maxWidth="200" onAction="#toMain" text="חזור"/>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
