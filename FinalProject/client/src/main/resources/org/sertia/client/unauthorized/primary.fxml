<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sertia.client.views.PrimaryController">
    <Label alignment="TOP_CENTER" text="ברוך הבא למערכת הסרטייה">
        <font>
            <Font size="26.0"/>
        </font>
    </Label>
    <Group>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="7">
            <Button onAction="#toLoginView" text="התחברות עובדים" minWidth="180.0" maxWidth="180.0"/>
