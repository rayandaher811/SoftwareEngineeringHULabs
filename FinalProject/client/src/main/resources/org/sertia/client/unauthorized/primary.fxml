            <Button onAction="#toAddComplaintView" text="הגשת תלונה" minWidth="180.0" maxWidth="180.0"/>
            <Button onAction="#toMovieTicketsPurchase" text="רכישת כרטיס/י קולנוע" minWidth="180.0" maxWidth="180.0"/>
            <Button onAction="#toPrepaidPurchaseView" text="רכישת כרטיסייה" minWidth="180.0" maxWidth="180.0"/>
            <Button onAction="#toHomeLinkView" text="רכישת לינק לצפיה ביתית" minWidth="180.0" maxWidth="180.0"/>
        </VBox>
    </Group>
</VBox>