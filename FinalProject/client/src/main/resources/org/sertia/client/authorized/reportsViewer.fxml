<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Group?>
<VBox alignment="CENTER" prefHeight="1000.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sertia.client.views.authorized.ReportsViewPresenter">
    <BorderPane prefHeight="368.0" prefWidth="618.0">
        <top>
            <Label alignment="TOP_CENTER" prefHeight="38.0" prefWidth="331.0" text="צפיה בדוחות"
                   BorderPane.alignment="CENTER">
                <font>
                    <Font size="26.0"/>
                </font>
            </Label>
        </top>
        <center>
            <VBox alignment="CENTER" spacing="7" BorderPane.alignment="CENTER">
                <ComboBox fx:id="reportsToShow" minWidth="300" maxWidth="300" maxHeight="300"/>
                <HBox alignment="CENTER" spacing="7" BorderPane.alignment="CENTER">
                    <Group fx:id="paneData" BorderPane.alignment="CENTER"/>
                </HBox>

            </VBox>
        </center>
        <bottom>
            <VBox alignment="CENTER" spacing="7" BorderPane.alignment="CENTER">
                <Button fx:id="backBtn" alignment="CENTER" maxHeight="26.0" maxWidth="180.0" minHeight="26.0"
                        minWidth="180.0" onAction="#back" text="חזור"/>
            </VBox>
        </bottom>
    </BorderPane>
</VBox>
