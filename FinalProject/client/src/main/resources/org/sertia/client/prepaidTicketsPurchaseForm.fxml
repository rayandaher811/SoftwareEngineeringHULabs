<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sertia.client.views.PrepaidTicketsPurchaseView">
    <children>
        <BorderPane prefHeight="368.0" prefWidth="618.0">
            <top>
                <Label alignment="TOP_CENTER" prefHeight="38.0" prefWidth="331.0" text="רכישת כרטיסייה"
                       BorderPane.alignment="CENTER">
                    <font>
                        <Font size="26.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <VBox alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField fx:id="clientName"/>
                            </children>
                            <children>
                                <Text text="שם פרטי        "/>
                            </children>
                        </HBox>
                    </children>
                    <children>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField fx:id="paymentMethod"/>
                            </children>
                            <children>
                                <Text text="אופן התשלום    "/>
                            </children>
                        </HBox>
                    </children>
                    <children>
                        <Button fx:id="buyPrepaidTicketsBtn" onAction="#buy" text="קנה כרטיסייה"/>
                    </children>
                    <children>
                        <Button fx:id="backBtn" onAction="#toMain" text="חזור"/>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
