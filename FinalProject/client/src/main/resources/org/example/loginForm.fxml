<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="190.0" prefWidth="291.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.LoginController">
    <children>
        <Label text="אנא הזן שם משתמש וסיסמא" />
      <Group>
         <children>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="53.0" prefWidth="160.0">
              <items>
                  <TextField alignment="CENTER" promptText="שם משתמש" />
                  <PasswordField alignment="CENTER" promptText="סיסמא" />
              </items>
            </SplitPane>
         </children>
      </Group>
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="התחבר!" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
